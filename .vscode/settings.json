    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "files.associations": {
        "*.j2": "html"
    },
    "editor.rulers": [
        88
    ],
}